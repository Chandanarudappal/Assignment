package pageObject;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

import resource.Base;

public class MailSendingPage extends Base{
	public WebDriver driver;
	
	By NewMail= By.cssSelector("[class='zmNewBtn zm_compose']");
	By RecieverId = By.cssSelector("Input[type='text']");
	By Attachment = By.cssSelector("[class='zei-attachment']");
	
	
	
	public MailSendingPage(WebDriver driver) {
		this.driver=driver;
	}
	
	public WebElement clickNewMail() {
		//TODO Auto-generated method stub
		return driver.findElement(NewMail);
	}
	public WebElement getRecieverId() {
		//TODO Auto-generated method stub
		return driver.findElement(RecieverId);
		
	}
	public WebElement clickAttachment() {
		return driver.findElement(Attachment);
		
	}
	
	}
